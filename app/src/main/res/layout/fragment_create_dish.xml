<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">


    <data>
        <variable
                name="viewmodel"
                type="com.bringo.dotit.viewmodels.CreateDishViewModel" />
    </data>

    <LinearLayout
            android:orientation="vertical"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"

            android:layout_marginStart="40dp"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="40dp">

        <ImageView
                android:background="@drawable/restau_back"
                android:layout_width="match_parent"
                android:layout_height="140dp"/>

        <LinearLayout
                android:layout_marginTop="20dp"
                android:id="@+id/fields"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <com.google.android.material.textfield.TextInputLayout
                    app:errorEnabled="true"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >
                <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/name"
                        android:hint="Dish name"
                        android:text="@={viewmodel.name}"
                        android:inputType="textPersonName"
                        android:fontFamily="@font/lato"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                    app:errorEnabled="true"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >
                <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/description"
                        android:hint="description (contents..)"
                        android:text="@={viewmodel.description}"
                        android:inputType="number"
                        android:fontFamily="@font/lato"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
            </com.google.android.material.textfield.TextInputLayout>

            <Spinner
                    android:id="@+id/categories_spinner"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"/>
            <com.google.android.material.textfield.TextInputLayout
                    app:errorEnabled="true"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >
                <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/category"
                        android:hint="category (dinner, desserts..)"
                        android:text="@={viewmodel.category}"
                        android:inputType="text"
                        android:fontFamily="@font/lato"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
            </com.google.android.material.textfield.TextInputLayout>
            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">
                <Spinner
                        android:fontFamily="@font/lato"
                        android:id="@+id/size_spinner"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:layout_width="150dp"
                        android:layout_height="40dp"/>

                <com.google.android.material.textfield.TextInputLayout
                        app:errorEnabled="true"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" >
                    <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/price"
                            android:hint="price"
                            android:text="@={viewmodel.price}"
                            android:inputType="textEmailAddress"
                            android:fontFamily="@font/lato"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"/>
                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>
        </LinearLayout>


        <RelativeLayout
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:gravity="center_horizontal"
                android:layout_marginTop="20dp">


            <com.github.ybq.android.spinkit.SpinKitView
                    android:id="@+id/spin_kit"
                    android:layout_marginStart="220dp"
                    android:elevation="10dp"
                    style="@style/SpinKitView.Small.FadingCircle"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    app:SpinKit_Color="@color/white" />

            <Button
                    android:id="@+id/button_bottom_long"
                    android:backgroundTint="@color/colorPrimary"
                    android:fontFamily="@font/lato"
                    android:text="Save and proceed"
                    android:clickable="true"
                    android:paddingEnd="60dp"
                    android:onClick="@{()->viewmodel.onDishSave()}"
                    android:paddingStart="60dp"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
        </RelativeLayout>

    </LinearLayout>
</layout>