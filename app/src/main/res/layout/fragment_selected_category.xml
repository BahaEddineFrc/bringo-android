<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        tools:context=".views.RestauMenu">

    <data class="CategoryBinding">
        <variable
                name="categoryviewmodel"
                type="com.bringo.dotit.viewmodels.CategoryViewModel" />
    </data>

    <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:orientation="vertical">

    <TextView
            android:id="@+id/dish_name"
            android:textAlignment="center"
            android:layout_marginTop="40dp"
            android:layout_below="@+id/dish_pic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Category name"
            android:text="@{categoryviewmodel.catName}"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" />

    <View
            android:id="@+id/dish_separator"
            android:layout_below="@+id/dish_name"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:layout_width="70dp"
            android:layout_height="2dp"
            android:background="@color/light_gray" />

    <TextView
            android:id="@+id/dish_description"
            android:textAlignment="center"
            android:layout_below="@+id/dish_separator"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="deliveryTime from restauName"
            android:text="@{categoryviewmodel.deliveryTime +` from `+ categoryviewmodel.restauName}"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/category_rv"
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />


</LinearLayout>
</layout>